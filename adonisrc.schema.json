{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "typescript": {
      "description": "Is project written in Typescript or not",
      "type": "boolean"
    },
    "exceptionHandlerNamespace": {
      "description": "Http server exception handler namespace",
      "type": "string"
    },
    "preloads": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "file": { "type": "string" },
              "environment": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["web", "console", "test"]
                }
              },
              "optional": {
                "type": "boolean"
              }
            },
            "required": ["file"],
            "additionalProperties": false
          }
        ]
      }
    },
    "metaFiles": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "pattern": { "type": "string" },
              "reloadServer": { "type": "boolean" }
            }
          }
        ]
      }
    },
    "aliases": {
      "type": "object"
    },
    "namespaces": {
      "type": "object"
    },
    "directories": {
      "type": "object"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "providers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "aceProviders": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [ "exceptionHandlerNamespace", "typescript", "providers" ]
}
