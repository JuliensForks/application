{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "exceptionHandlerNamespace": {
      "description": "Http server exception handler namespace",
      "type": "string"
    },
    "preloads": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "environment": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["web", "console", "test"]
            }
          },
          "optional": {
            "type": "boolean"
          }
        },
        "required": ["file"],
        "additionalProperties": false
      }
    },
    "metaFiles": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "pattern": { "type": "string" },
              "reloadServer": { "type": "boolean" }
            }
          }
        ]
      }
    },
    "autoloads": {
      "type": "object"
    },
    "namespaces": {
      "type": "object"
    },
    "directories": {
      "type": "object"
    }
  },
  "required": [ "exceptionHandlerNamespace" ]
}
